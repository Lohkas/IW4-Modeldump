global proc WraithMesh_672004ad_00_BindFunc()
{
   select -r WraithMesh_672004ad_00;
   select -add tag_stow_back_mid_up;
   newSkinCluster "-toSelectedBones -mi 15 -omi true -dr 5.0 -rui false";   string $clu = findRelatedSkinCluster("WraithMesh_672004ad_00");

   skinPercent -tv tag_stow_back_mid_up 1.0 $clu WraithMesh_672004ad_00.vtx[0:2];
}

global proc RunAdvancedScript()
{
